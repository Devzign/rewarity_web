# Hostinger deployment configuration example
# Copy this file to the project root as `.env.hostinger` and adjust the values.

# SSH connection details
DEPLOY_HOST=82.112.232.250
DEPLOY_PORT=65002
DEPLOY_USER=u551475123

# Remote path where the Laravel project should live (no trailing slash)
DEPLOY_PATH=/home/u551475123/domains/devzign.com/public_html/rewarity/public

# PHP binary available on the server (e.g. php, php81, php82)
REMOTE_PHP=php

# Environment file to upload. When true, the file will be copied to remote as `.env`
UPLOAD_ENV=true
LOCAL_ENV_FILE=.env.production

# SQLite database upload settings
UPLOAD_SQLITE_DB=true
LOCAL_DB_FILE=database/database.sqlite
REMOTE_DB_FILE=database/database.sqlite

# Whether to execute artisan commands on the server after upload
RUN_MIGRATIONS=false
RUN_STORAGE_LINK=false

# Default admin bootstrap (ensure credentials exist remotely)
ENSURE_DEFAULT_ADMIN_ON_BOOT=true
DEFAULT_ADMIN_EMAIL=admin@rewarity.com
DEFAULT_ADMIN_PASSWORD=Password123!
DEFAULT_ADMIN_NAME=Administrator
# Toggle to overwrite the password on each request if needed (be sure to disable afterwards)
DEFAULT_ADMIN_FORCE_PASSWORD_SYNC=false
